RESTART

LOAD FILE=../../../tools/native/PairEntropy.cpp

PAIRENTROPY ...
 LABEL=s2
 ATOMS=1-1024
 MAXR=0.7
 SIGMA=0.0125
... PAIRENTROPY

ENERGY LABEL=ene

VOLUME LABEL=vol

COMBINE ...
 ARG=ene,vol
 POWERS=1,1
 COEFFICIENTS=1.,0.060221409
 PERIODIC=NO
 LABEL=enthalpy
... COMBINE

COMBINE ...
 ARG=enthalpy
 POWERS=1
 COEFFICIENTS=0.001
 PERIODIC=NO
 LABEL=enthalpyPerAtom
... COMBINE

PRINT STRIDE=500  ARG=* FILE=colvar/COLVAR